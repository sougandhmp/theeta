<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vendorView"
            type="com.android.theta.vendor.model.VendorItem" />

        <variable
            name="clickListener"
            type="com.android.theta.commons.CustomRepeatListener" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customboarder"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mtrl_list_item_icon"
                android:layout_width="130dp"
                android:layout_height="fill_parent"
                android:layout_alignParentStart="true"
                app:srcCompat="@drawable/hotel1"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mtrl_list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/mtrl_list_item_icon"
                    android:text="@{vendorView.name}"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />



                <TextView
                    android:id="@+id/mtrl_list_item_tertiary_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@id/mtrl_list_item_secondary_text"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/mtrl_list_item_icon"
                    android:text="@{`â‚¹ `+vendorView.price}"

                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/clear"
                    android:layout_marginLeft="10dp"
                    android:checked="@{vendorView.defaultStatus}"
                    android:text="@{vendorView.defaultStatus ? `on` : `off`}"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

      <!--  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />






        </LinearLayout>-->


    </LinearLayout>


</layout>
